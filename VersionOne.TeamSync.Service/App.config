<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="serviceSettings" type="VersionOne.TeamSync.Core.Config.ServiceSettings, VersionOne.TeamSync.Service"/>
    <section name="v1Settings" type="VersionOne.TeamSync.Core.Config.V1Settings, VersionOne.TeamSync.Interfaces"/>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
    <!--<section name="jiraSettings" type="VersionOne.TeamSync.JiraConnector.Config.JiraSettings, VersionOne.TeamSync.JiraConnector"/>-->
    <!--<section name="tfsSettings" type="VersionOne.TeamSync.TfsConnector.Config.TfsSettings, VersionOne.TeamSync.TfsConnector"/>-->
  </configSections>

  <!-- Logger settings. -->
  <log4net>
    <appender name="RemotingAppender" type="log4net.Appender.RemotingAppender" >
      <bufferSize value="1" />
      <sink value="tcp://localhost:8086/LoggingSink" />
      <lossy value="false" />
      <onlyFixPartialEventData value="true" />
      <filter type="VersionOne.TeamSync.Core.LevelFilter, VersionOne.TeamSync.Interfaces">
        <level value="ALL" />
      </filter>
    </appender>

    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="logs/VersionOne.TeamSync.Service.%date{yyyy-MM-dd}.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyyMMdd" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level %logger - %message%newline" />
      </layout>
      <filter type="VersionOne.TeamSync.Core.LevelFilter, VersionOne.TeamSync.Interfaces">
        <level value="DEBUG" />
      </filter>
    </appender>

    <root>
      <level value="ALL" />
      <appender-ref ref="RollingLogFileAppender" />
      <appender-ref ref="RemotingAppender" />
    </root>
  </log4net>

  <!-- General VersionOne.TeamSync.Service settings -->
  <serviceSettings syncIntervalInMinutes="3" />

  <!-- VersionOne settings -->
  <!-- Authentication Type: 0=AccessToken, 1=Basic, 2=WIA Current User, 3=WIA Specified User, 4=WIA Access Token -->
  <v1Settings authenticationType="1" url="http://localhost/VersionOne" accessToken="" ***REMOVED*** ***REMOVED***>
    <proxy enabled="false" url="http://proxyurl" domain="proxydomain" ***REMOVED*** ***REMOVED*** />
  </v1Settings>

  <!--<jiraSettings configSource="Jira.config" />-->
  <!--<tfsSettings configSource="Tfs.config" />-->
      
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.1" />
  </startup>
</configuration>